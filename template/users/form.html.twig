{% extends 'base.html.twig' %}

{% block title %}
Create a new car
{% endblock %}

{% block content %}

{% if users %}
<form action="{{env.base_path ~ '/users/' ~ users.id ~ '/edit'}}" method="post">
    {% else %}
    <form action="{{env.base_path ~ '/users'}}" method="post">
        {% endif %}


        <div class="form-group">
            <label for="formFirstname">Firstname</label>
            <input name="firstname" id="formFirstname" type="text" class="form-control"
                value="{{ users ? users.firstname : '' }}">
        </div>
        <div class="form-group">
            <label for="formLastname">Lastname</label>
            <input name="lastname" id="formLastname" type="text" class="form-control"
                value="{{ users ? users.lastname : '' }}">
        </div>

        {% if users %}
        <button type="submit" class="btn btn-warning">Edit the user</button>
        {% else %}
        <button type="submit" class="btn btn-primary">Create a user</button>
        {% endif %}

    </form>
    {% endblock %}