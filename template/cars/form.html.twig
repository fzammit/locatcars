{% extends 'base.html.twig' %}

{% block title %}
Create a new car
{% endblock %}

{% block content %}

{% if <i class="fas fa-car-crash    "></i> %}
<form action="{{env.base_path ~ '/cars' ~ cars.id ~ '/edit'}}" method="post">
    {% else %}
    <form action="{{env.base_path ~ '/cars'}}" method="post">
        {% endif %}


        <div class="form-group">
            <label for="formBrand">Brand</label>
            <input name="brand" id="formBrand" type="text" class="form-control"
                value="{{ cars ? cars.brand : '' }}">
        </div>
        <div class="form-group">
            <label for="formModel">Model</label>
            <input name="model" id="formModel" type="text" class="form-control"
                value="{{ cars ? cars.model : '' }}">
        </div>

        {% if cars %}
        <button type="submit" class="btn btn-success rounded">Edit the car</button>
        {% else %}
        <button type="submit" class="btn btn-primary">Create a car</button>
        {% endif %}

    </form>
    {% endblock %}